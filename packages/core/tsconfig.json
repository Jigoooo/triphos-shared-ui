{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "outDir": "./dist",

    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/lib/*": ["lib/*"],
      "@/ui/*": ["ui/*"],
      "@/hooks/*": ["hooks/*"],
      "@/constants/*": ["constants/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.stories.ts",
    "**/*.stories.tsx"
  ]
}
